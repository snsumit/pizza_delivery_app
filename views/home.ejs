<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Real time pizza</title>
   <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
   <link rel="stylesheet" href="css/style.css">
   
   <script src="https://cdn.tailwindcss.com"></script>
   

</head>

<body>
   <div>
     <%- include('../partials/nav')%>
   </div>
   <section class="container1">
      <div class="content">
         <h1>Welcome</h1>
         <p>We cooked your desired <br>pizza recipe</p>
         <a class="btn1" href="/cart"  >Order Now</a>
         <a class="btn2" href="#Menu">view Menu</a>
      </div>

   </section>
   <section class="menu conatiner  mx-auto py-8 pl-8" id="Menu">
      <h1 class="text-4xl abcd text-center mb-6 mt-4">Hot Meals</h1>
      <div class="grid grid-cols-4 gap-20">
         <% pizzas.forEach((pizza)=>{ %>
            <div class="w-64">
               <div class="">
                  <img src="images/<%=pizza.image%>" alt="image" class="h-36 mb-4 mx-auto">
                  <div class="text-center">
                     <h2 class="mb-4 text-lg"><%=pizza.name%></h2>
                     <span class="py-1 px-4 rounded-full uppercase text-sm size"><%=pizza.size%></span>
                     <div class="flex justify-around items-center mt-2 ">
                        <span><%=pizza.price%></span>
                        <button data-pizza="<%= JSON.stringify(pizza)%>" class="btn">
                           <span>+&nbsp;</span>
                           <span>Add</span>
                        </button>
                     </div>
                  </div>
               </div>
            </div>
           

        <% }) %>
        
      </div>
   </section>
   <script src="https://js.stripe.com/v3/"></script>
   
        <script src="/js/app.js"></script> 
   
</body>

</html>